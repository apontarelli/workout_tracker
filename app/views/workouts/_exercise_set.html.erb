<div class="set mb-2 nested-fields">
  <%= s.hidden_field :_destroy %>
  <div class="mb-2">
    <%= s.label :reps, "Reps", class: "block text-gray-700 text-sm font-bold mb-1" %>
    <%= s.number_field :reps, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-2">
    <%= s.label :weight, "Weight", class: "block text-gray-700 text-sm font-bold mb-1" %>
    <%= s.number_field :weight, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <%= link_to "Remove Set", "#", class: "remove_fields text-red-500", data: { action: "click->fields#removeAssociation" } %>
</div>