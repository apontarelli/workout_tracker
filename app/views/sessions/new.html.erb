<h1>Log in</h1>

<%= form_with(url: login_path, local: true) do |form| %>
  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email, name: 'session[email]', autofocus: true %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password, name: 'session[password]' %>
  </div>

  <div class="actions">
    <%= form.submit "Log in" %>
  </div>
<% end %>

<%= link_to "Sign up now!", signup_path %>
